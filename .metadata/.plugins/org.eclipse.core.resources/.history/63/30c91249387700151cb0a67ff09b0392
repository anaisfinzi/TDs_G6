package td6_7.exo3_1;



/**
 * @author fcamps
 *
 */

class ProdFramed extends Thread 
{
	Ex3_1_FramedBuffer buf;

	public ProdFramed(Ex3_1_FramedBuffer b) 
	{
		buf = b;
	}

	public void run() 
	{
		while (true)
		{
			buf.deposer(new Integer(1));
		}
	}
}

/**
 * 
 * @author fcamps
 *
 */
class ConsFramed extends Thread 
{
	Ex3_1_FramedBuffer buf;

	public ConsFramed(Ex3_1_FramedBuffer b) 
	{
		buf = b;
	}

	public void run()
	{
		while (true)
		{
			buf.prelever();
		}
	}
}


public class TestFramedBuffer {

	/**
	 * @param args
	 */
	public static void main(String[] args) {

		Ex3_1_FramedBuffer buff = new Ex3_1_FramedBuffer(20);

		new ProdFramed(buff).start();
		new ConsFramed(buff).start();	

	}

}
