package td6_7.exo3_3;

/**
 * 
 * @author fcamps
 *
 */
class Prod extends Thread 
{
	SimpleBuffer buf;

	public Prod(SimpleBuffer b) 
	{
		buf = b;
	}

	public void run() 
	{
		while (true)
		{
			buf.deposer(new Integer(1));
		}
	}
}

/**
 * 
 * @author fcampsfull
 *
 */
class Cons extends Thread 
{
	SimpleBuffer buf;

	public Cons(SimpleBuffer b) 
	{
		buf = b;
	}

	public void run()
	{
		while (true)
		{
			buf.prelever();
			Thread.yield();
		}
	}
}

/**
 * 
 * @author fcamps
 *
 */
public class TestSimpleBuffer {

	/**
	 * @param args
	 */
	public static void main(String[] args) {

		SimpleBuffer buff = new SimpleBuffer();
		
		new Prod(buff).start();
		new Cons(buff).start();	
	}

}
