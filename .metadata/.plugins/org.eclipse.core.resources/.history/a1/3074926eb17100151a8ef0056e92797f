/**
 * @author fcamps
 *
 */

class ProdFramed2 extends Thread 
{
	FramedBuffer buf;

	public ProdFramed2(FramedBuffer b) 
	{
		buf = b;
	}

	public void run() 
	{
		while (true)
		{
			buf.deposer(new Integer(1));
		}
	}
}

/**
 * 
 * @author fcamps
 *
 */
class ConsFramed2 extends Thread 
{
	FramedBuffer buf;

	public ConsFramed2(FramedBuffer b) 
	{
		buf = b;
	}

	public void run()
	{
		while (true)
		{
			buf.prelever();
		}
	}
}


public class TestFramedBuffer2 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {

		FramedBuffer2 buff = new FramedBuffer2(20);

		new ProdFramed2(buff).start();
		new ConsFramed2(buff).start();	

	}

}
